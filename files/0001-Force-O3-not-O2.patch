From ffda4f1b7950a1b11fd0491e110fac85c54f9431 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Thu, 16 Nov 2017 10:44:38 +0000
Subject: [PATCH] Force O3 not O2

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 Makefile.generic               | 2 +-
 Makefile.system                | 4 ++--
 lapack-netlib/make.inc.example | 2 +-
 3 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/Makefile.generic b/Makefile.generic
index a5e50b1..a7e034f 100644
--- a/Makefile.generic
+++ b/Makefile.generic
@@ -1 +1 @@
-COPT	= -Wall -O2 # -DGEMMTEST
+COPT	= -Wall -O3 # -DGEMMTEST
diff --git a/Makefile.system b/Makefile.system
index bd361a1..dfa196b 100644
--- a/Makefile.system
+++ b/Makefile.system
@@ -1036,11 +1036,11 @@ FCOMMON_OPT += -g
 endif
 
 ifndef COMMON_OPT
-COMMON_OPT = -O2
+COMMON_OPT = -O3
 endif
 
 ifndef FCOMMON_OPT
-FCOMMON_OPT = -O2 -frecursive
+FCOMMON_OPT = -O3 -frecursive
 endif
 
 
diff --git a/lapack-netlib/make.inc.example b/lapack-netlib/make.inc.example
index 7f66018..07944db 100644
--- a/lapack-netlib/make.inc.example
+++ b/lapack-netlib/make.inc.example
@@ -17,7 +17,7 @@ SHELL = /bin/sh
 #  should not compile LAPACK with flags such as -ffpe-trap=overflow.
 #
 FORTRAN  = gfortran
-OPTS     = -O2 -frecursive
+OPTS     = -O3 -frecursive
 DRVOPTS  = $(OPTS)
 NOOPT    = -O0 -frecursive
 LOADER   = gfortran
-- 
